doctype html
head
    meta(charset='UTF-8')
    title Garderie
    style.
        table, th, td {
            border:solid black 2px;
            padding: 2px;
            border-collapse: collapse;
        }
        th {
            background-color: #00B7FF;
        }
    script(src='../routes/garderie.js')

form(method='POST' action='/garderie')
    input#idGarderie.form-control(type='text', placeholder='Garderie ID' name='idGarderie')
    input#idEleve.form-control(type='text', placeholder='Student ID' name='idEleve')
    input#date.form-control(type='text', placeholder='Date' name='date')
    input#heure.form-control(type='text', placeholder='Hour' name='heure')
    input#outin.form-control(type='text', placeholder='In/Out' name='outin')

table#tableGarderie
    tr
        th idGarderie
        th Nom
        th Pr√©nom
        th Annee
        th Date
        th Heure
        th In/Out
    tbody
        each line in garderieTableau
            tr
                td= line.idGarderie
                td= line.nomEleve
                td= line.prenomEleve
                td= line.annee
                td= line.dateG
                td= line.heure
                td= line.outIn